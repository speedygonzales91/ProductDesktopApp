<Window x:Class="ProductDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductDesktopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button 
            x:Name="addButton"
            Content="Add"
            Grid.Column="1"
            Style="{StaticResource saveButtonStyle}"
            Click="addButton_Click"></Button>
        <Button 
            x:Name="deleteButton"
            Content="Delete"
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource deleteButtonStyle}"
            Click="deleteButton_Click"></Button>
        <ListView x:Name="productsListView">
            <ListView.View>
                <GridView AllowsColumnReorder="true"
                 ColumnHeaderToolTip="Employee Information">
                    <GridViewColumn 
                        Header="" 
                        Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected}">
                                </CheckBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn 
                        DisplayMemberBinding="{Binding Name}"
                        Header="Name" 
                        Width="50">
                    </GridViewColumn>
                    <GridViewColumn 
                        DisplayMemberBinding="{Binding Price}"
                        Header="Price" Width="50">
                    </GridViewColumn>
                    <GridViewColumn 
                        DisplayMemberBinding="{Binding CategoryId}"
                        Header="Category" Width="100">
                    </GridViewColumn>
                    <GridViewColumn 
                        DisplayMemberBinding="{Binding Description}"
                        Header="Description" Width="150">
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
